<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
	<%= link_to "Remove list", list_path(@list), method: :delete, data: { confirm: "Are you sure?" } %></p>
  </div>
</div>

<div class='container my-4'>
	<h3>Movies</h3> 
	<%= link_to 'Add movie',  new_list_bookmark_path(@list) %>
	<div>
		<% if @bookmarks.length < 1 %>
			<p>(You didn't added bookmarks to your list yet!)</p>
		<% else %>
			<div class='d-flex flex-wrap'>
				<% @bookmarks.each do |bookmark| %>
					<div class="card m-2" style="width: 18rem;">
						<img src="<%= bookmark.movie.poster_url %>" alt="">
						<div class="card-body">
							<h4 class="card-text"><%= bookmark.movie.title %></h4>
							<p class="card-text"><%= bookmark.movie.overview %></p>
							<p class="card-text">Rating: <%= bookmark.movie.rating %>/10</p>
							<p>Comment: "<%=bookmark.comment%>"</p> 
						<p class='text-right p-0 m-0'><%= link_to '', bookmark_path(bookmark), method: :delete, class: "far fa-trash-alt", data: { confirm: "Are you sure you want to remove this movie from the list?" } %></p>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
